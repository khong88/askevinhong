<% if @user && @user.errors.any? %>
  <% @user.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
<% end %>

<% if @speaking_request && @speaking_request.errors.any? %>
  <% @speaking_request.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
<% end %>

<%= form_tag '/speaking_requests', method: :post do |f| %>
  <div class="field">
    <%= label_tag :name %>
    <%= text_field_tag :name, "", class: "form-control" %>
  </div>
  
  <div class="field">
    <%= label_tag :email %>
    <%= text_field_tag :email, "", class: "form-control" %>
  </div>
  
  <div class="field">
    <%= label_tag :phone %>
    <%= text_field_tag :phone, "", class: "form-control" %>
  </div>
  
  <div class="field">
    <%= label_tag :event_name %>
    <%= text_field_tag :event_name, "", class: "form-control" %>
  </div>
  
  <div class="field">
    <%= label_tag :speaking_type %>
    <%= select_tag :speaking_type, options_for_select([['School Event', 'School Event'], 
    ['Corporate Event', 'Corporate Event'], ['Startup Event', 'Startup Event'], 
    ['Other', 'Other']]), class: "form-control" %>
  </div>  

  <div class="field">
    <%= label_tag :event_date %>
    <%= text_field_tag :event_date, "", class: "form-control", id: "datepicker" %>
  </div>

  <div class="field">
    <%= label_tag :description %>
    <%= text_area_tag :description, "", class: "form-control" %>
  </div>

  <div class="form-group">
  <button class="btn btn-primary">
    Request for Speaking
  </button>
  </div>
<% end %>
