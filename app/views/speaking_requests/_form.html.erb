<%= form_tag '/speaking_requests', method: :post do |f| %>
  <div class="field">
    <%= label_tag :username %>
    <%= text_field_tag :username %>
  </div>
  
  <div class="field">
    <%= label_tag :email %>
    <%= text_field_tag :email %>
  </div>
  

  <div class="field">
    <%= label_tag :event_name %>
    <%= text_field_tag :event_name %>
  </div>

  <div class="field">
    <%= label_tag :event_date %>
    <%= text_field_tag :event_date %>
  </div>

  <div class="field">
    <%= label_tag :description %>
    <%= text_area_tag :description %>
  </div>

  <div class="actions">
    <%= submit_tag 'Request for Speaking' %>
  </div>
<% end %>
