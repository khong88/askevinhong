<%= form_tag '/coaching_requests', method: :post do |f| %>
  <div class="form-group">
    <%= label_tag :name %>
    <%= text_field_tag :name, "", class: "form-control" %>
  </div>
  
  <div class="field">
    <%= label_tag :email %>
    <%= text_field_tag :email, "", class: "form-control" %>
  </div>
  
  <div class="form-group">
    <%= label_tag :phone %>
    <%= text_field_tag :phone, "", class: "form-control" %>
  </div>
  
  <div class="form-group">
    <%= label_tag :coaching_type %>
    <%= select_tag :coaching_type, options_for_select([['Career Coaching', 'Career Coaching'], ['Salary Negotiation', 'Salary Negotiation'], 
    ['Promotions at Work', 'Promotions at Work'], ['Starting a New Business', 'Starting a New Business'], ['Life Advice', 'Life Advice'], ['Other', 'Other']]), class: "form-control" %>
  </div>  

  <div class="form-group">
    <%= label_tag :description %>
    <%= text_area_tag :description, "", class: "form-control" %>
  </div>
  <div class="form-group">
  <button class="btn btn-primary">
    Request for Coaching
  </button>
  </div>
<% end %>
