<p id="notice"><%= notice %></p>

<h1>Coaching Requests</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Submitted at</th>
      <th>Description</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @coaching_requests.each do |coaching_request| %>
      <tr>
        <td><%= coaching_request.user %></td>
        <td><%= coaching_request.submitted_at %></td>
        <td><%= coaching_request.description %></td>
        <td><%= coaching_request.status %></td>
        <td><%= link_to 'Show', coaching_request %></td>
        <td><%= link_to 'Edit', edit_coaching_request_path(coaching_request) %></td>
        <td><%= link_to 'Destroy', coaching_request, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

