<%= form_tag '/advisor_requests', method: :post do |f| %>
  <div class="field">
    <%= label_tag :name %>
    <%= text_field_tag :name, "", class: "form-control" %>
  </div>
  
  <div class="field">
    <%= label_tag :email %>
    <%= text_field_tag :email, "", class: "form-control" %>
  </div>
  
  <div class="field">
    <%= label_tag :phone %>
    <%= text_field_tag :phone, "", class: "form-control" %>
  </div>

  <div class="field">
    <%= label_tag :company_name %>
    <%= text_field_tag :company_name, "", class: "form-control" %>
  </div>
  
  <div class="field">
    <%= label_tag :company_size %>
    <%= text_field_tag :company_size, "", class: "form-control"%>
  </div>
  
  <div class="field">
    <%= label_tag :industry %>
    <%= text_field_tag :industry, "", class: "form-control"%>
  </div>
  
  <div class="form-group">
    <%= label_tag :advising_type %>
    <%= select_tag :advising_type, options_for_select([['Business Development Strategy', 'Business Development Strategy'],
    ['Branding Strategy', 'Branding Strategy'],  ['Media Relations', 'Media Relations'], 
    ['Marketing Strategy', 'Marketing Strategy'], ['Leadership', 'Leadership'],
    ['Fundraising', 'Fundraising'], ['Other', 'Other']]), class: "form-control" %>
  </div>  

  <div class="field">
    <%= label_tag :description %>
    <%= text_area_tag :description, "", class: "form-control"%>
  </div>

  <div class="form-group">
  <button class="btn btn-primary">
    Request for Advising
  </button>
  </div>
<% end %>
