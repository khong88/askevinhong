<% if @user && @user.errors.any? %>
  <% @user.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
<% end %>

<% if @company && @company.errors.any? %>
  <% @company.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
<% end %>

<% if @writing_request && @writing_request.errors.any? %>
  <% @writing_request.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
<% end %>

<%= form_tag '/writing_requests', method: :post do |f| %>
  <div class="field">
    <%= label_tag :name %>
    <%= text_field_tag :name, "", class: "form-control" %>
  </div>
  
  <div class="field">
    <%= label_tag :email %>
    <%= text_field_tag :email, "", class: "form-control" %>
  </div>
  
  <div class="field">
    <%= label_tag :phone %>
    <%= text_field_tag :phone, "", class: "form-control" %>
  </div>
  
  <div class="field">
    <%= label_tag :company_name %>
    <%= text_field_tag :company_name, "", class: "form-control" %>
  </div>
  
  <div class="field">
    <%= label_tag :company_size %>
    <%= text_field_tag :company_size, "", class: "form-control"%>
  </div>
  
  <div class="field">
    <%= label_tag :industry %>
    <%= text_field_tag :industry, "", class: "form-control"%>
  </div>
  
  <div class="form-group">
    <%= label_tag :writing_type %>
    <%= select_tag :writing_type, options_for_select([['Writing Coaching', 'Writing Coaching'],
    ['Book Launch Consulting', 'Book Launch Consulting'], 
    ['Thought Leadership Advice', 'Thought Leadership Advice'], 
    ['Ghost Writing', 'Ghost Writing'], ['Other', 'Other']]), class: "form-control" %>
  </div>   

  <div class="field">
    <%= label_tag :description %>
    <%= text_area_tag :description, "", class: "form-control"%>
  </div>

  <div class="form-group">
  <button class="btn btn-primary">
    Request for Writing
  </button>
  </div>
<% end %>
