<%= form_tag '/writing_requests', method: :post do |f| %>
  <div class="field">
    <%= label_tag :name %>
    <%= text_field_tag :name %>
  </div>
  
  <div class="field">
    <%= label_tag :email %>
    <%= text_field_tag :email %>
  </div>
  
  <div class="field">
    <%= label_tag :phone %>
    <%= text_field_tag :phone %>
  </div>
  
  <div class="field">
    <%= label_tag :company_name %>
    <%= text_field_tag :company_name %>
  </div>
  
  <div class="field">
    <%= label_tag :company_size %>
    <%= text_field_tag :company_size %>
  </div>
  
  <div class="field">
    <%= label_tag :industry %>
    <%= text_field_tag :industry %>
  </div>
  
  <div class="field">
    <%= label_tag :writing_type %>
    <%= select_tag :writing_type, options_for_select([['Writing Coaching', 'Writing Coaching'], ['Book Launch Consulting', 'Book Launch Consulting'], 
    ['Thought Leadership Advice', 'Thought Leadership Advice'], ['Ghost Writing', 'Ghost Writing'], ['Other', 'Other']]) %>
  </div>   

  <div class="field">
    <%= label_tag :description %>
    <%= text_area_tag :description %>
  </div>

  <div class="actions">
    <%= submit_tag 'Request for Writing' %>
  </div>
<% end %>
